<Window x:Class="Project.View.PharmacistMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project.View"
        mc:Ignorable="d"
        Title="Apotekar" Height="450" Width="800">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="792">
            <TabItem Header="Lekovi">
                <Grid Background="#FFE5E5E5">
                    <StackPanel>
                        <DockPanel Margin="5">
                            <Label Width="150">Pretraga po šifri:</Label>
                            <TextBox Width="150" HorizontalAlignment="Left" Margin="5,0,0,0">5452</TextBox>
                            <Button Width="100" HorizontalAlignment="Left" Margin="5,0,0,0" Content="Pretraži"/>
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label Width="150">Pretraga po imenu:</Label>
                            <TextBox Width="150" HorizontalAlignment="Left" Margin="5,0,0,0">Brufen</TextBox>
                            <Button Width="100" HorizontalAlignment="Left" Margin="5,0,0,0" Content="Pretraži"/>
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label Width="150">Pretraga po proizvođaču:</Label>
                            <TextBox Width="150" HorizontalAlignment="Left" Margin="5,0,0,0">Idk</TextBox>
                            <Button Width="100" HorizontalAlignment="Left" Margin="5,0,0,0" Content="Pretraži"/>
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label Width="150">Pretraga po ceni:</Label>
                            <TextBox Width="80" HorizontalAlignment="Left" Margin="5,0,0,0">From</TextBox>
                            <TextBox Width="80" HorizontalAlignment="Left" Margin="5,0,0,0">To</TextBox>
                            <Button Width="100" HorizontalAlignment="Left" Margin="5,0,0,0" Content="Pretraži"/>
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label Width="150">Pretraga po količini:</Label>
                            <TextBox Width="150" HorizontalAlignment="Left" Margin="5,0,0,0">15</TextBox>
                            <Button Width="100" HorizontalAlignment="Left" Margin="5,0,0,0" Content="Pretraži"/>
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label Width="150">Pretraga po sastojcima:</Label>
                            <TextBox Width="300" HorizontalAlignment="Left" Margin="5,0,0,0">silicijum-dioksid amp; (magnezijum | kalcijum))</TextBox>
                            <Button Width="100" HorizontalAlignment="Left" Margin="5,0,0,0" Content="Pretraži"/>
                        </DockPanel>
                    </StackPanel>
                    <DataGrid x:Name="medicineDataGrid"
                            AutoGenerateColumns="False"
                            IsReadOnly="True" Margin="10,232,0,20" Width="369" HorizontalAlignment="Left">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Šifra"
                            Binding="{Binding Code}" />
                            <DataGridTextColumn Header="Ime"
                            Binding="{Binding Name}" />
                            <DataGridTextColumn Header="Proizvođač"
                            Binding="{Binding Manufacturer}" />
                            <DataGridTextColumn Header="Cena"
                            Binding="{Binding Price}" />
                            <DataGridTextColumn Header="Količina"
                            Binding="{Binding Amount}" />
                            <DataGridTextColumn Header="Sastojci"
                            Binding="{Binding Ingredients}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button Background="Red" Content="Obriši" HorizontalAlignment="Left" Margin="401,351,0,0" VerticalAlignment="Top" Width="75" />

                </Grid>
            </TabItem>

            <TabItem Header="Sastojci">
                <Grid Background="#FFE5E5E5">
                    <StackPanel>
                        <DockPanel Margin="5">
                            <Label Width="130">Pretraga po imenu:</Label>
                            <TextBox Width="150" HorizontalAlignment="Left" Margin="5,0,0,0">Brufen</TextBox>
                            <Button Width="100" HorizontalAlignment="Left" Margin="5,0,0,0" Content="Pretraži"/>
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label Width="130">Pretraga po opisu:</Label>
                            <TextBox Width="150" HorizontalAlignment="Left" Margin="5,0,0,0">Some description idk</TextBox>
                            <Button Width="100" HorizontalAlignment="Left" Margin="5,0,0,0" Content="Pretraži"/>
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label Width="130">Pretraga po leku:</Label>
                            <TextBox Width="150" HorizontalAlignment="Left" Margin="5,0,0,0">Brufen</TextBox>
                            <Button Width="100" HorizontalAlignment="Left" Margin="5,0,0,0" Content="Pretraži"/>
                        </DockPanel>
                    </StackPanel>
                    <DataGrid x:Name="ingerdientsDataGrid"
                            AutoGenerateColumns="False"
                            IsReadOnly="True" Margin="10,130,0,122" Width="369" HorizontalAlignment="Left">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Ime"
                            Binding="{Binding Name}" />
                            <DataGridTextColumn Header="Opis"
                            Binding="{Binding Manufacturer}" />
                            <DataGridTextColumn Header="Lek"
                            Binding="{Binding Price}" />
                            <DataGridTextColumn Header="Uračunat lek"
                            Binding="{Binding Amount}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Dodaj lek">
                <Grid Background="#FFE5E5E5">
                    <StackPanel>
                        <DockPanel Margin="5">
                            <Label Width="90">Šifra:</Label>
                            <TextBox Width="150" HorizontalAlignment="Left" Margin="5,0,0,0" />
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label Width="90">Ime:</Label>
                            <TextBox Width="150" HorizontalAlignment="Left" Margin="5,0,0,0" />
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label Width="90">Proizvođač:</Label>
                            <TextBox Width="150" HorizontalAlignment="Left" Margin="5,0,0,0" />
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label Width="90">Cena:</Label>
                            <TextBox Width="150" HorizontalAlignment="Left" Margin="5,0,0,0" />
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label Width="90">Količina:</Label>
                            <TextBox Width="150" HorizontalAlignment="Left" Margin="5,0,0,0" />
                        </DockPanel>
                        <DockPanel Margin="5">
                            <Label Width="90">Sastojci:</Label>
                            <TextBox Width="150" HorizontalAlignment="Left" Margin="5,0,0,0" />
                        </DockPanel>
                        <Button Content="Dodaj" Width="70" HorizontalAlignment="Left" Background="Green" Margin="5"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Prihvaćeni i odbijeni lekovi">
                <Grid Background="#FFE5E5E5">

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
